<% content_for :head do %>
<style type="text/css">
  html { height: 100% }
  body { height: 100%; margin: 0px; padding: 0px }
  #map_canvas { height: 100% }
</style>

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false" ></script>

<script type="text/javascript">
  $(function() {
    var latlng = new google.maps.LatLng(51.26793,1.108246);
    var opts = {
      zoom: 8,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    var map = new google.maps.Map(document.getElementById("map_canvas"), opts);
    
    $.getJSON("/sightings.json", function(data) {
    	$.each(data, function(key, val) {
    		var lat = val.lat;
    		var lng = val.long;
    		var desc = val.description;
    		var occ = val.occasion;
    		var loc = new google.maps.LatLng(lat, lng);
    		var marker = new google.maps.Marker({position: loc, map: map, title: desc});
    		
    		var info = new google.maps.InfoWindow();
    		google.maps.event.addListener(marker, 'click', function () {
    			var content = '<p>' + desc + '</p>';
    			content += '<p>Date: ' + occ + '</p>';
				info.setContent(content);
                info.open(map, this);
			});
        });
    })
  });
</script>

<% end %>

<div id="map_canvas" style="width:100%;height:100%;"></div>
