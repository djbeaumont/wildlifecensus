<h1>Listing sightings</h1>

<table>
  <tr>
    <th>Occasion</th>
    <th>Description</th>
    <th>Photo</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>User</th>
    <th>Species</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sightings.each do |sighting| %>
  <tr>
    <td><%= sighting.occasion %></td>
    <td><%= sighting.description %></td>
    <td><%= sighting.photo %></td>
    <td><%= sighting.latitude %></td>
    <td><%= sighting.longitude %></td>
    <td><%= link_to sighting.user.email, sighting.user %></td>
    <td><%= link_to sighting.species.vernacular, sighting.species %></td>
    <td><%= link_to 'Show', sighting %></td>
    <td><%= link_to 'Edit', edit_sighting_path(sighting) %></td>
    <td><%= link_to 'Destroy', sighting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

